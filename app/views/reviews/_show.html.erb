<div class="review-content">
  <% if @book.reviews.any? %>
    <div class="panel panel-default">
      <% @book.reviews.each do |r| %>
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-3">
              <small><%= r.user.name %></small>
            </div>
            <% if current_user == r.user %>
              <div class="col-md-2 col-md-offset-5">
              <%= link_to t("btn.edit"), edit_book_review_path(@book, r.id),
                class: "btn btn-xs btn-primary" %>
              <%= link_to t("btn.delete"), book_review_path(@book, r.id), 
                method: :delete, data: {confirm: t("application.confirm")}, 
                class: "btn btn-xs btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="panel-body">
          <%= r.content %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= render "reviews/form" %>
</div>
