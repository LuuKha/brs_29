<%= search_form_for @q do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title_cont, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author_cont, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :category_id %>
    <%= f.select :category_id_eq, options_for_select(@category_selects, 
      @q.category_id_eq), {include_blank: t("book.all")}, 
      class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :rating, class: "label-rating" %>
      <div class="rating">
        <div class="rating-from"><%= t "book.from" %></div>
        <%= f.text_field :rating_gt, class: "form-control rating-field" %>
      </div>
      <div class="rating">
        <div class="rating-from"><%= t "book.to" %></div>
        <%= f.text_field :rating_lt, class: "form-control rating-field" %>
      </div>
  </div>
  <div class="field">
    <%= f.label t("book.sort_by") %>
    <%= sort_link @q, :favorites, {}, class: "form-control" %>
  </div>
  <div class="button-search center"><%= f.submit t("book.search"), 
    class: "btn btn-success" %></div>
<% end %>
