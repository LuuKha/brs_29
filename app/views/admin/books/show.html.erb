<%= provide :title, @book.title %>
<div class="row">
  <div class="col-md-4">
    <div class="book-image center">
      <%= image_tag t("application.default-image"), class: "mc-img" %>
    </div>
    <div class="book_info">
      <div class="produdct_name center">
        <p><%= @book.title %></p>
      </div>
      <p>
        <%= t "book.book_author" %>:
        <%= @book.author %>
      </p>
      <p>
        <%= t "book.book_category" %>:
        <%= @book.category.name %>
      </p>
      <p>
        <%= t "book.pages" %>:
        <%= @book.number_of_pages %>
      </p>
      <p>
        <%= t "book.publish_date" %>:
        <%= @book.publish_date %>
      </p>
      <div class="center">
        <%= link_to t("book.edit"), edit_admin_book_path(@book), 
          class: "btn btn-primary" %>
        <%= link_to t("book.delete"), admin_book_path(@book), 
          method: :delete, data: {confirm: t("application.confirm")}, 
          class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <div class="col-md-8 review-zone">
    <h2><%= t "book.review" %></h2>
  </div>
</div>
