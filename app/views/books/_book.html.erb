<div class="item col-xs-4 col-lg-4">
  <div class="thumbnail">
    <%= link_to (image_tag t("application.default-image"), 
      class: "group list-group-image mc-img"), book %>
    <div class="caption">
      <h4 class="group inner list-group-item-heading">
        <%= link_to book.title, book %>
      </h4>
      <p class="group inner list-group-item-text">
        <%= t "book.book_author" %>: <%= book.author %>
      </p>
      <p class="group inner list-group-item-text">
        <%= t "book.book_category" %>: <%= book.category.name %>
      </p>
    </div>
  </div>
</div>
